# API Token Configuration
# Copy this to .env and fill in your actual tokens
# NEVER commit this file to git - it contains secrets

# HuggingFace API Token (get from https://huggingface.co/settings/tokens)
# Used for: Finding better models, searching datasets, model recommendations
HF_TOKEN=hf_your_token_here

# GitHub Personal Access Token (get from https://github.com/settings/tokens)
# Used for: Finding code examples, checking trending projects, learning from patterns
# Scopes needed: repo (if private), public_repo (if public only)
GITHUB_TOKEN=ghp_your_token_here

# OpenAI API Key (optional, get from https://platform.openai.com/api-keys)
# Used for: Cloud fallback when Ollama unavailable
OPENAI_API_KEY=sk_your_token_here

# Model Configuration
# Which Ollama model to use for main processing
OLLAMA_MODEL=uncensored-llama3

# Timeout for LLM calls (seconds)
LLM_TIMEOUT=13

# Temperature for LLM (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.1
